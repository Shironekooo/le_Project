<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OverviewFragment">


    <TextView
        android:id="@+id/overviewFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:text="History"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/search"
        app:iconifiedByDefault="false"
        app:searchHintIcon="@null"
        app:queryHint="Search..."
        android:focusable="false"
        app:closeIcon="@drawable/baseline_clear_24"
        app:searchIcon="@drawable/baseline_search_24"
        android:layout_marginBottom="15dp"/>

    <!-- Sorting Options -->
    <RadioGroup
        android:id="@+id/sort_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/event_asc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event ASC"
            android:textSize="12sp"
            android:textColor="@color/accent"/>

        <RadioButton
            android:id="@+id/event_desc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event DESC"
            android:textSize="12sp"
            android:textColor="@color/accent"/>

        <RadioButton
            android:id="@+id/time_asc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time ASC"
            android:textSize="12sp"
            android:textColor="@color/accent"/>

        <RadioButton
            android:id="@+id/time_desc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time DESC"
            android:textSize="12sp"
            android:textColor="@color/accent"/>
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="400dp"
        android:padding="5dp"
        android:id="@+id/dataView"
        tools:listitem="@layout/data_item">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.appcompat.widget.LinearLayoutCompat>